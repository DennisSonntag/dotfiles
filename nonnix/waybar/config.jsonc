[
	{
		"layer": "top",
		"position": "top",
		"output": [
			"HDMI-A-1"
		],
		"include": [
			"./default-config.jsonc"
		],
		"modules-right": [
			"custom/spotify",
			"tray",
			// "custom/test",
			"custom/cap-right-light",
			"pulseaudio",
			"custom/cap-right-light-bg",
			"clock"
		],
		"custom/test": {
			"tooltip": true,
			"format": " {} ",
			"exec": "brightness-py get 1",
